<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/lib/demo.com.circularmap"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:layout_marginTop="30dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="250dp"
        tools:context="demo.com.circluarmap.MapsActivity" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cir"
            android:gravity="center">

            <demo.com.circluarmap.DonutProgress
                android:id="@+id/donut_progress"
                android:layout_width="260dp"
                android:layout_height="260dp"
                custom:donut_finished_color="#000"
                custom:donut_finished_stroke_width="2dp"
                android:backgroundTint="#000"
                android:backgroundTintMode="add"
                custom:donut_show_text="false"
                custom:donut_unfinished_color="@color/primary_material_light"
                custom:donut_unfinished_stroke_width="5dp"
                custom:donut_progress="10"/>
</LinearLayout>

</RelativeLayout>